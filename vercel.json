{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "static"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "GUARDIAN_API_KEY": "@guardian_api_key",
    "NEWS_API_KEY": "@news_api_key",
    "NEWSAPI_KEY": "@newsapi_key",
    "GNEWS_API_KEY": "@gnews_api_key"
  }
}
